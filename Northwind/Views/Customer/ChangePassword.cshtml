@{
    ViewBag.Title = "ChangePassword";
}

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    else
    { 
    
    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">Reset Pasword</div>
                <div class="panel-body">
                    <form method="post" class="form-horizontal">
                        <input type="hidden" name="token" id="token" value="@ViewBag.Token" />
                        <div class="form-group">
                            <label for="password" class="col-md-2">Password</label>
                            <input class="form-control" type="password" id="password" name="password" />
                        </div>
                        <div class="form-group">
                            <label for="password-verify" class="col-md-2">Verify Password</label>
                            <input class="form-control" type="password" id="password-verify" name="password-verify" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-default">Change Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Didn't request this?
                </div>
                <div class="panel-body">
                    <a href="/Customer/UnauthorizedForgetPasswordRequest?token=@ViewBag.Token" class="btn btn-primary">Click Here to Delete Password Request</a>
                </div>
            </div>
        </div>
    </div>

    }

    <div class="font-md">
        <a href="~/Home/Index"><i class="fa fa-home"></i> Home</a>
    </div>



