@{
    ViewBag.Title = "ChangePassword";
}

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    else
    { 
    
    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <div class="font-md">Customer Sign In</div>
    <div class="well">
        <form method="post" class="form-horizontal">
            <input type="hidden" name="token" id="token" value="@ViewBag.Token" />
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" />
            </div>
            <div class="form-group">
                <label for="password-verify">Verify Password</label>
                <input type="password" id="password-verify" name="password-verify" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Change Password</button>
                </div>
            </div>
        </form>
    </div>

    }

    <div class="font-md">
        <a href="~/Home/Index"><i class="fa fa-home"></i> Home</a>
    </div>



